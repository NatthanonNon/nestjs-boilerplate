# App
NODE_ENV=development
PORT=10001
API_PREFIX=api/v1
APP_NAME=nestjs-boilerplate

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_RETENTION_DAYS=14

# Uploads
UPLOAD_DIR=uploads

# Migrations
RUN_MIGRATIONS_ON_STARTUP=true
MIGRATION_MAX_ATTEMPTS=10
MIGRATION_RETRY_DELAY_SECONDS=3

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=docs

# HTTP client
HTTP_TIMEOUT=5000
HTTP_MAX_REDIRECTS=5

# Database (app connection)
# For Docker: DB_HOST=db and DB_PORT=5432.
# For local API using Docker Postgres: DB_HOST=localhost and DB_PORT=10003.
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app
DB_DEBUG=false

# Postgres container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app

# pgAdmin
# PGADMIN_SERVER_PORT should match the Postgres container port.
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_SERVER_NAME=Local Postgres
PGADMIN_SERVER_GROUP=Servers
PGADMIN_SERVER_HOST=db
PGADMIN_SERVER_PORT=5432
