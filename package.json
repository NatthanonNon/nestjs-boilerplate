{
  "name": "nestjs-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run start:dev -w @app/api",
    "dev:web": "npm run dev -w @app/web",
    "build": "npm run build -w @app/api && npm run build -w @app/web",
    "lint": "npm run lint -ws",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "format:watch": "npm run format:watch -w @app/api",
    "test": "npm run test -ws"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=24"
  }
}
